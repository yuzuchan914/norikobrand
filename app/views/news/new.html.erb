<h1>NEWSを投稿する</h1>

<%= form_with(model: @news, local: true) do |form| %>
  <% if @news.errors.any? %>
    <div style="color: red;">
      <h2><%= pluralize(@news.errors.count, "件のエラー") %>があります：</h2>
      <ul>
        <% @news.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div style="margin-bottom: 20px;">
    <%= form.label :title, "タイトル" %><br>
    <%= form.text_field :title, style: "width: 100%; padding: 8px;" %>
  </div>

  <div style="margin-bottom: 20px;">
    <%= form.label :content, "本文" %><br>
    <%= form.text_area :content, rows: 8, style: "width: 100%; padding: 8px;" %>
  </div>

  <div>
    <%= form.label :image, "画像アップロード" %><br>
    <%= form.file_field :image %>
  </div>

  <div>
    <%= form.submit "投稿する", class: "btn btn-primary" %>
  </div>
<% end %>

<%= link_to "NEWS一覧へ戻る", news_index_path, class: "btn btn-secondary", style: "margin-top: 20px;" %>