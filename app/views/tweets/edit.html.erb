<h1>商品編集ページ</h1>

<%= form_for @tweet, html: { multipart: true } do |f| %>

  <div class="field">
    <%= f.label :商品名 %><br>
    <%= f.text_field :name, size: 30 %>
  </div>

  <div class="field">
    <%= f.label :値段 %><br>
    <%= f.number_field :price, size: 10 %>
  </div>

  <div class="field">
    <%= f.label :商品説明 %><br>
    <%= f.text_area :description, size: "30x2" %>
  </div>

  <div class="field">
    <%= f.label :画像 %><br>
    <% if @tweet.image.attached? %>
      <%= image_tag @tweet.image, size: '250x200' %><br>
      <%= f.check_box :remove_image %> 画像を削除する（必要なら）
    <% end %>
    <%= f.file_field :image %>
  </div>

  <%= f.submit "更新する" %>
<% end %>

<%= button_to "削除する", tweet_path(@tweet), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger", form: { style: "display:inline" } %>

<br>
<%= link_to "商品一覧に戻る", tweets_path %>